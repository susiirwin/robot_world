<a href="/robots">Back to Robot Index</a>


  <div class="jumbotron">
    <div class="row">
      <div class="col-md-4"><h1>Meet <%= @robot.name %></h1>
      <p>City: <%= @robot.city %> </p>
      <p>State: <%= @robot.state %></p>
      <p>Birthday: <%= @robot.birthday %></p>
      <p>Hire Date: <%= @robot.date_hired %></p>
      <p>Department: <%= @robot.department %></p></div>
      <div class="col-md-8"><img src="https://robohash.org/<%= @robot.name %>" alt='avatar'></div>
    </div>

  </div>

  <a class="btn btn-info" href="/robots/<%= @robot.id %>/edit" role="button">Edit Robot Details</a><BR /><BR />

  <form action="/robots/<%= @robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="submit" value="Delete this Robot" class="btn btn-warning btn-md"/>
  </form>
